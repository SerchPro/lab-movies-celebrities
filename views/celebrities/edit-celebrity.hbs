
<div class="container">
    <h2>Edit a  celebrity</h2>
    <br>
    <div class="row">
        <div class ="col-4">
            <form method ="POST" action ="/celebrities/create">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{this.name}}">
                </div>
                <div class="mb-3">
                    <label for="occupation" class="form-label">Occupation</label>
                    <input type="text" class="form-control" id="occupation" name="occupation" value="{{this.occupation}}">
                </div>
                <div class="mb-3">
                    <label for="catchPhrase" class="form-label">Catch phrase</label>
                    <input type="text" class="form-control" id="catchPhrase" name="catchPhrase" value="{{this.catchPhrase}}">
                </div>
                <br>
                <br>
                <a type="button" class="btn btn-outline-danger" href="/">Cancel</a>
                <button type="submit" class="btn btn-primary">update Celebrity</button>
            </form>
        </div>
    </div>
</div>

